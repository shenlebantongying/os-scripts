(defun +elfeed-search-quit-and-kill-buffers ()
  "Save the database, then kill elfeed buffers, asking the user
for confirmation when needed."
  (interactive)
  (elfeed-db-save)
  (kill-buffer "*elfeed-entry*")
  (kill-buffer "*elfeed-log*")
  (kill-buffer (current-buffer)))

